# .env.example - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (never enable in production)
DEBUG=true

# Application host and port
HOST=0.0.0.0
PORT=8501

# =============================================================================
# LLM CONFIGURATION (REQUIRED)
# =============================================================================

# Groq API Key (REQUIRED - Get from https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# LLM Model selection
LLM_MODEL=llama-3.3-70b-versatile

# LLM Parameters
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1200
LLM_TIMEOUT=120

# =============================================================================
# DIRECTORY CONFIGURATION
# =============================================================================

# Data directories (relative to project root)
DATA_DIR=data
OUTPUT_DIR=output
TEMP_DIR=tmp
LOGS_DIR=logs

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session management (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# File size limits (in MB)
MAX_FILE_SIZE_MB=100
MAX_REPO_SIZE_MB=500

# SSL Configuration (for production)
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_USER_ANALYTICS=false

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# Health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Distributed tracing
ENABLE_TRACING=false
JAEGER_ENDPOINT=

# =============================================================================
# DATABASE CONFIGURATION (Future Use)
# =============================================================================

# Database settings (currently unused but prepared for future)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=multiagent
DB_USER=multiagent_user
DB_PASSWORD=
DB_SSL_MODE=require

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_PER_HOUR=1000
LLM_RATE_LIMIT_RPM=100

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS
# =============================================================================

# Test configuration
TEST_OUTPUT_DIR=tests/output
TEST_TEMP_DIR=tests/tmp

# Mock services (for testing)
MOCK_LLM_RESPONSES=false
MOCK_GIT_OPERATIONS=false